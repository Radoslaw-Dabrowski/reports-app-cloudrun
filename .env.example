# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration (Cloud SQL or external PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reports_db
DB_USER=postgres
DB_PASSWORD=your-password-here
# For Cloud SQL Unix Socket connection
# DB_UNIX_SOCKET=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=eu-north-1
S3_BUCKET_NAME=dhc-reports

# Redis Cache (Cloud Memorystore)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For Cloud Memorystore connection
# REDIS_HOST=10.0.0.3

# Application Settings
CACHE_TTL=3600
ENABLE_CACHE=true
LOG_LEVEL=INFO

# Cloud Run Settings
PORT=8080
WORKERS=2
THREADS=4
TIMEOUT=300
